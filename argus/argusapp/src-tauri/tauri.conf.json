{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "YourAppName",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.utlra.argusapp",
      "icon": ["icons/icon.icns"],
      "targets": ["dmg"],
      "macOS": {
        "category": "public.app-category.utilities"
      }
    },
    "windows": [
      {
        "title": "YourAppName",
        "width": 800,
        "height": 600
      }
    ]
  }
}



